<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1100" d:DesignHeight="820"
        x:Class="AcomMonitor.MainWindow"
        Title="ACOM 1400S Live Monitor"
        Width="1100" Height="820">

    <Window.Styles>
        <!-- Card Style -->
        <Style Selector="Border.card">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
                        <GradientStop Color="#1a1a2e" Offset="0"/>
                        <GradientStop Color="#16213e" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Margin" Value="6"/>
            <Setter Property="BoxShadow" Value="0 6 24 0 #40000000"/>
        </Style>

        <!-- Section Header -->
        <Style Selector="TextBlock.sectionHeader">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#0ef"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
            <Setter Property="TextDecorations" Value="Underline"/>
        </Style>

        <!-- Label Style -->
        <Style Selector="TextBlock.label">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#94a3b8"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,4,0,4"/>
        </Style>

        <!-- Value Style -->
        <Style Selector="TextBlock.value">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,0%">
                        <GradientStop Color="#00f5ff" Offset="0"/>
                        <GradientStop Color="#00d9ff" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,4,0,4"/>
        </Style>

        <!-- Big Value Style (for important metrics) -->
        <Style Selector="TextBlock.bigValue">
            <Setter Property="FontSize" Value="26"/>
            <Setter Property="FontWeight" Value="ExtraBold"/>
            <Setter Property="Foreground">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,0%">
                        <GradientStop Color="#00ff87" Offset="0"/>
                        <GradientStop Color="#60efff" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#00ff87" BlurRadius="15" Opacity="0.6"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Button Base Style -->
        <Style Selector="Button.controlBtn">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Height" Value="42"/>
            <Setter Property="Padding" Value="24,0"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Transitions">
                <Transitions>
                    <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.2"/>
                </Transitions>
            </Setter>
        </Style>

        <!-- Standby Button -->
        <Style Selector="Button.standby">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0%,0%" EndPoint="0%,100%">
                        <GradientStop Color="#2193b0" Offset="0"/>
                        <GradientStop Color="#6dd5ed" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush" Value="#2193b0"/>
        </Style>

        <Style Selector="Button.standby:pointerover">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0%,0%" EndPoint="0%,100%">
                        <GradientStop Color="#2da4c4" Offset="0"/>
                        <GradientStop Color="#7de2f7" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="RenderTransform" Value="scale(1.05)"/>
        </Style>

        <!-- Tune Button -->
        <Style Selector="Button.tune">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0%,0%" EndPoint="0%,100%">
                        <GradientStop Color="#f093fb" Offset="0"/>
                        <GradientStop Color="#f5576c" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush" Value="#f093fb"/>
        </Style>

        <Style Selector="Button.tune:pointerover">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0%,0%" EndPoint="0%,100%">
                        <GradientStop Color="#ffa7ff" Offset="0"/>
                        <GradientStop Color="#ff6b7e" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="RenderTransform" Value="scale(1.05)"/>
        </Style>

        <!-- Bypass Button -->
        <Style Selector="Button.bypass">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0%,0%" EndPoint="0%,100%">
                        <GradientStop Color="#fa709a" Offset="0"/>
                        <GradientStop Color="#fee140" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush" Value="#fa709a"/>
        </Style>

        <Style Selector="Button.bypass:pointerover">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0%,0%" EndPoint="0%,100%">
                        <GradientStop Color="#ff84ae" Offset="0"/>
                        <GradientStop Color="#fff554" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="RenderTransform" Value="scale(1.05)"/>
        </Style>

        <!-- Power Button -->
        <Style Selector="Button.power">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0%,0%" EndPoint="0%,100%">
                        <GradientStop Color="#eb3349" Offset="0"/>
                        <GradientStop Color="#f45c43" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush" Value="#eb3349"/>
        </Style>

        <Style Selector="Button.power:pointerover">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0%,0%" EndPoint="0%,100%">
                        <GradientStop Color="#ff4757" Offset="0"/>
                        <GradientStop Color="#ff7051" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="RenderTransform" Value="scale(1.05)"/>
        </Style>
    </Window.Styles>

    <!-- Main Background -->
    <Panel>
        <Panel.Background>
            <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
                <GradientStop Color="#0f0c29" Offset="0"/>
                <GradientStop Color="#302b63" Offset="0.5"/>
                <GradientStop Color="#24243e" Offset="1"/>
            </LinearGradientBrush>
        </Panel.Background>

        <ScrollViewer Padding="12">
            <StackPanel Spacing="0">
                <!-- Title Header -->
                <Border Background="#00000040" CornerRadius="10" Padding="12" Margin="6,6,6,10">
                    <StackPanel>
                        <TextBlock Text="ACOM 1400S" FontSize="28" FontWeight="Black" Foreground="#00f5ff" HorizontalAlignment="Center"/>
                        <TextBlock Text="LIVE MONITOR SYSTEM" FontSize="11" Foreground="#94a3b8" HorizontalAlignment="Center" LetterSpacing="2"/>
                    </StackPanel>
                </Border>

                <!-- Main Content Grid -->
                <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto,Auto">

                    <!-- Power Metrics Card -->
                    <Border Classes="card" Grid.Column="0" Grid.Row="0">
                        <StackPanel>
                            <TextBlock Classes="sectionHeader" Text="âš¡ POWER METRICS"/>

                            <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto,Auto,Auto">
                                <TextBlock Grid.Row="0" Grid.Column="0" Classes="label" Text="Forward Power"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" Classes="bigValue" Name="ValFwd" Text="-" HorizontalAlignment="Right"/>

                                <TextBlock Grid.Row="1" Grid.Column="0" Classes="label" Text="Reflected Power"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" Classes="value" Name="ValRef" Text="-" HorizontalAlignment="Right"/>

                                <TextBlock Grid.Row="2" Grid.Column="0" Classes="label" Text="Input Power"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" Classes="value" Name="ValInputP" Text="-" HorizontalAlignment="Right"/>

                                <TextBlock Grid.Row="3" Grid.Column="0" Classes="label" Text="Gain"/>
                                <TextBlock Grid.Row="3" Grid.Column="1" Classes="value" Name="ValGain" Text="-" HorizontalAlignment="Right"/>

                                <TextBlock Grid.Row="4" Grid.Column="0" Classes="label" Text="Dissipation"/>
                                <TextBlock Grid.Row="4" Grid.Column="1" Classes="value" Name="ValDiss" Text="-" HorizontalAlignment="Right"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- SWR Card -->
                    <Border Classes="card" Grid.Column="1" Grid.Row="0">
                        <StackPanel>
                            <TextBlock Classes="sectionHeader" Text="ðŸ“Š SWR STATUS"/>
                            <TextBlock Classes="bigValue" Name="ValSWR" Text="-" HorizontalAlignment="Center" FontSize="48" Margin="0,10"/>
                            <TextBlock Text="Standing Wave Ratio" FontSize="10" Foreground="#64748b" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Electrical Metrics Card -->
                    <Border Classes="card" Grid.Column="0" Grid.Row="1">
                        <StackPanel>
                            <TextBlock Classes="sectionHeader" Text="âš™ï¸ ELECTRICAL"/>

                            <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto,Auto">
                                <TextBlock Grid.Row="0" Grid.Column="0" Classes="label" Text="DC Voltage"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" Classes="value" Name="ValDcV" Text="-" HorizontalAlignment="Right"/>

                                <TextBlock Grid.Row="1" Grid.Column="0" Classes="label" Text="DC Current"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" Classes="value" Name="ValDcA" Text="-" HorizontalAlignment="Right"/>

                                <TextBlock Grid.Row="2" Grid.Column="0" Classes="label" Text="Bias Left"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" Classes="value" Name="ValBiasL" Text="-" HorizontalAlignment="Right"/>

                                <TextBlock Grid.Row="3" Grid.Column="0" Classes="label" Text="Bias Right"/>
                                <TextBlock Grid.Row="3" Grid.Column="1" Classes="value" Name="ValBiasR" Text="-" HorizontalAlignment="Right"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Temperature Card -->
                    <Border Classes="card" Grid.Column="1" Grid.Row="1">
                        <StackPanel>
                            <TextBlock Classes="sectionHeader" Text="ðŸŒ¡ï¸ TEMPERATURE"/>

                            <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto">
                                <TextBlock Grid.Row="0" Grid.Column="0" Classes="label" Text="Temperature Â°C"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" Classes="bigValue" Name="ValTempC" Text="-" HorizontalAlignment="Right" FontSize="32"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Status & Config Card -->
                    <Border Classes="card" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="2">
                        <StackPanel>
                            <TextBlock Classes="sectionHeader" Text="ðŸ“¡ CONFIGURATION &amp; STATUS"/>

                            <Grid ColumnDefinitions="*,*,*,*,*" RowDefinitions="Auto,Auto">
                                <!-- Band -->
                                <StackPanel Grid.Column="0" Margin="6">
                                    <TextBlock Classes="label" Text="Band" HorizontalAlignment="Center"/>
                                    <TextBlock Classes="value" Name="ValBand" Text="-" HorizontalAlignment="Center" FontSize="14"/>
                                </StackPanel>

                                <!-- Mode -->
                                <StackPanel Grid.Column="1" Margin="6">
                                    <TextBlock Classes="label" Text="Mode" HorizontalAlignment="Center"/>
                                    <TextBlock Classes="value" Name="ValMode" Text="-" HorizontalAlignment="Center" FontSize="14"/>
                                </StackPanel>

                                <!-- ATU -->
                                <StackPanel Grid.Column="2" Margin="6">
                                    <TextBlock Classes="label" Text="ATU" HorizontalAlignment="Center"/>
                                    <TextBlock Classes="value" Name="ValATU" Text="-" HorizontalAlignment="Center" FontSize="14"/>
                                </StackPanel>

                                <!-- CAT -->
                                <StackPanel Grid.Column="3" Margin="6">
                                    <TextBlock Classes="label" Text="CAT" HorizontalAlignment="Center"/>
                                    <TextBlock Classes="value" Name="ValCAT" Text="-" HorizontalAlignment="Center" FontSize="14"/>
                                </StackPanel>

                                <!-- RC -->
                                <StackPanel Grid.Column="4" Margin="6">
                                    <TextBlock Classes="label" Text="Remote" HorizontalAlignment="Center"/>
                                    <TextBlock Classes="value" Name="ValRC" Text="-" HorizontalAlignment="Center" FontSize="14"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Control Buttons -->
                <Border Background="#00000040" CornerRadius="10" Padding="12" Margin="6,10,6,6">
                    <StackPanel>
                        <TextBlock Text="AMPLIFIER CONTROLS" FontSize="11" Foreground="#94a3b8" HorizontalAlignment="Center" LetterSpacing="2" Margin="0,0,0,8"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Button Name="BtnStandby" Classes="controlBtn standby" Content="STANDBY" Click="OnStandbyClick"/>
                            <Button Name="BtnTune" Classes="controlBtn tune" Content="TUNE" Click="OnTuneClick"/>
                            <Button Name="BtnBypass" Classes="controlBtn bypass" Content="BYPASS" Click="OnBypassClick"/>
                            <Button Name="BtnPowerOff" Classes="controlBtn power" Content="POWER OFF" Click="OnPowerOffClick"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Panel>
</Window>
