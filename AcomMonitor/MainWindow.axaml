<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="520" d:DesignHeight="420"
        x:Class="AcomMonitor.MainWindow"
        Title="ACOM 1400S Monitor"
        Width="520" Height="420"
        MinWidth="480" MinHeight="380"
        CanResize="True">

    <Window.Styles>
        <!-- Card Style - Compact -->
        <Style Selector="Border.card">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
                        <GradientStop Color="#1a1a2e" Offset="0"/>
                        <GradientStop Color="#16213e" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Margin" Value="3"/>
            <Setter Property="BoxShadow" Value="0 2 8 0 #30000000"/>
        </Style>

        <!-- Section Header - Compact -->
        <Style Selector="TextBlock.sectionHeader">
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#0ef"/>
            <Setter Property="Margin" Value="0,0,0,4"/>
        </Style>

        <!-- Label Style - Compact -->
        <Style Selector="TextBlock.label">
            <Setter Property="FontSize" Value="9"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#94a3b8"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,1"/>
        </Style>

        <!-- Digital Display Value Style -->
        <Style Selector="TextBlock.value">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,0%">
                        <GradientStop Color="#00f5ff" Offset="0"/>
                        <GradientStop Color="#00d9ff" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="FontFamily" Value="Consolas, Monaco, 'Courier New', monospace"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,1"/>
            <Setter Property="LetterSpacing" Value="1"/>
        </Style>

        <!-- Big Digital Display Value -->
        <Style Selector="TextBlock.bigValue">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="ExtraBold"/>
            <Setter Property="Foreground">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,0%">
                        <GradientStop Color="#00ff87" Offset="0"/>
                        <GradientStop Color="#60efff" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="FontFamily" Value="Consolas, Monaco, 'Courier New', monospace"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="LetterSpacing" Value="2"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#00ff87" BlurRadius="8" Opacity="0.5"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Giant Digital Display (SWR) -->
        <Style Selector="TextBlock.giantValue">
            <Setter Property="FontSize" Value="32"/>
            <Setter Property="FontWeight" Value="ExtraBold"/>
            <Setter Property="FontFamily" Value="Consolas, Monaco, 'Courier New', monospace"/>
            <Setter Property="LetterSpacing" Value="3"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#00ff87" BlurRadius="10" Opacity="0.6"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Button Base Style - Compact -->
        <Style Selector="Button.controlBtn">
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="Padding" Value="12,0"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Transitions">
                <Transitions>
                    <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.15"/>
                </Transitions>
            </Setter>
        </Style>

        <!-- Standby Button -->
        <Style Selector="Button.standby">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0%,0%" EndPoint="0%,100%">
                        <GradientStop Color="#2193b0" Offset="0"/>
                        <GradientStop Color="#6dd5ed" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush" Value="#2193b0"/>
        </Style>

        <Style Selector="Button.standby:pointerover">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0%,0%" EndPoint="0%,100%">
                        <GradientStop Color="#2da4c4" Offset="0"/>
                        <GradientStop Color="#7de2f7" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="RenderTransform" Value="scale(1.03)"/>
        </Style>

        <!-- Tune Button -->
        <Style Selector="Button.tune">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0%,0%" EndPoint="0%,100%">
                        <GradientStop Color="#f093fb" Offset="0"/>
                        <GradientStop Color="#f5576c" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush" Value="#f093fb"/>
        </Style>

        <Style Selector="Button.tune:pointerover">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0%,0%" EndPoint="0%,100%">
                        <GradientStop Color="#ffa7ff" Offset="0"/>
                        <GradientStop Color="#ff6b7e" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="RenderTransform" Value="scale(1.03)"/>
        </Style>

        <!-- Bypass Button -->
        <Style Selector="Button.bypass">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0%,0%" EndPoint="0%,100%">
                        <GradientStop Color="#fa709a" Offset="0"/>
                        <GradientStop Color="#fee140" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush" Value="#fa709a"/>
        </Style>

        <Style Selector="Button.bypass:pointerover">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0%,0%" EndPoint="0%,100%">
                        <GradientStop Color="#ff84ae" Offset="0"/>
                        <GradientStop Color="#fff554" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="RenderTransform" Value="scale(1.03)"/>
        </Style>

        <!-- Power Button -->
        <Style Selector="Button.power">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0%,0%" EndPoint="0%,100%">
                        <GradientStop Color="#eb3349" Offset="0"/>
                        <GradientStop Color="#f45c43" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush" Value="#eb3349"/>
        </Style>

        <Style Selector="Button.power:pointerover">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0%,0%" EndPoint="0%,100%">
                        <GradientStop Color="#ff4757" Offset="0"/>
                        <GradientStop Color="#ff7051" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="RenderTransform" Value="scale(1.03)"/>
        </Style>
    </Window.Styles>

    <!-- Main Background -->
    <Panel>
        <Panel.Background>
            <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
                <GradientStop Color="#0f0c29" Offset="0"/>
                <GradientStop Color="#302b63" Offset="0.5"/>
                <GradientStop Color="#24243e" Offset="1"/>
            </LinearGradientBrush>
        </Panel.Background>

        <Grid RowDefinitions="Auto,*,Auto" Margin="6">
            <!-- Compact Title Header -->
            <Border Grid.Row="0" Background="#00000040" CornerRadius="6" Padding="8,4" Margin="3,3,3,3">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="8">
                    <TextBlock Text="ACOM 1400S" FontSize="14" FontWeight="Black" Foreground="#00f5ff" VerticalAlignment="Center"/>
                    <TextBlock Text="MONITOR" FontSize="9" Foreground="#94a3b8" VerticalAlignment="Center" LetterSpacing="1"/>
                </StackPanel>
            </Border>

            <!-- Main Content Grid -->
            <Grid Grid.Row="1" ColumnDefinitions="*,*" RowDefinitions="Auto,Auto,Auto">

                <!-- Power Metrics Card -->
                <Border Classes="card" Grid.Column="0" Grid.Row="0">
                    <StackPanel>
                        <TextBlock Classes="sectionHeader" Text="POWER"/>
                        <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto,Auto,Auto" Margin="0,2,0,0">
                            <TextBlock Grid.Row="0" Grid.Column="0" Classes="label" Text="Fwd"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" Classes="bigValue" Name="ValFwd" Text="----" HorizontalAlignment="Right"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Classes="label" Text="Ref"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" Classes="value" Name="ValRef" Text="----" HorizontalAlignment="Right"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Classes="label" Text="In"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" Classes="value" Name="ValInputP" Text="----" HorizontalAlignment="Right"/>

                            <TextBlock Grid.Row="3" Grid.Column="0" Classes="label" Text="Gain"/>
                            <TextBlock Grid.Row="3" Grid.Column="1" Classes="value" Name="ValGain" Text="----" HorizontalAlignment="Right"/>

                            <TextBlock Grid.Row="4" Grid.Column="0" Classes="label" Text="Diss"/>
                            <TextBlock Grid.Row="4" Grid.Column="1" Classes="value" Name="ValDiss" Text="----" HorizontalAlignment="Right"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- SWR Card -->
                <Border Classes="card" Grid.Column="1" Grid.Row="0">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Classes="sectionHeader" Text="SWR" HorizontalAlignment="Center"/>
                        <TextBlock Classes="giantValue" Name="ValSWR" Text="-.--" HorizontalAlignment="Center" Margin="0,8"/>
                        <TextBlock Text="Standing Wave Ratio" FontSize="8" Foreground="#64748b" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Electrical Metrics Card -->
                <Border Classes="card" Grid.Column="0" Grid.Row="1">
                    <StackPanel>
                        <TextBlock Classes="sectionHeader" Text="ELECTRICAL"/>
                        <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto,Auto" Margin="0,2,0,0">
                            <TextBlock Grid.Row="0" Grid.Column="0" Classes="label" Text="Vdc"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" Classes="value" Name="ValDcV" Text="----" HorizontalAlignment="Right"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Classes="label" Text="Adc"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" Classes="value" Name="ValDcA" Text="----" HorizontalAlignment="Right"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Classes="label" Text="Bias L"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" Classes="value" Name="ValBiasL" Text="----" HorizontalAlignment="Right"/>

                            <TextBlock Grid.Row="3" Grid.Column="0" Classes="label" Text="Bias R"/>
                            <TextBlock Grid.Row="3" Grid.Column="1" Classes="value" Name="ValBiasR" Text="----" HorizontalAlignment="Right"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Temperature Card -->
                <Border Classes="card" Grid.Column="1" Grid.Row="1">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Classes="sectionHeader" Text="TEMP" HorizontalAlignment="Center"/>
                        <TextBlock Classes="bigValue" Name="ValTempC" Text="--" HorizontalAlignment="Center" FontSize="22" Margin="0,6"/>
                        <TextBlock Text="Degrees C" FontSize="8" Foreground="#64748b" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Status & Config Card - Compact inline -->
                <Border Classes="card" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="2">
                    <Grid ColumnDefinitions="*,*,*,*,*" RowDefinitions="Auto">
                        <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                            <TextBlock Classes="label" Text="Band" HorizontalAlignment="Center" FontSize="8"/>
                            <TextBlock Classes="value" Name="ValBand" Text="--" HorizontalAlignment="Center" FontSize="11"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                            <TextBlock Classes="label" Text="Mode" HorizontalAlignment="Center" FontSize="8"/>
                            <TextBlock Classes="value" Name="ValMode" Text="--" HorizontalAlignment="Center" FontSize="11"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                            <TextBlock Classes="label" Text="ATU" HorizontalAlignment="Center" FontSize="8"/>
                            <TextBlock Classes="value" Name="ValATU" Text="--" HorizontalAlignment="Center" FontSize="11"/>
                        </StackPanel>

                        <StackPanel Grid.Column="3" HorizontalAlignment="Center">
                            <TextBlock Classes="label" Text="CAT" HorizontalAlignment="Center" FontSize="8"/>
                            <TextBlock Classes="value" Name="ValCAT" Text="--" HorizontalAlignment="Center" FontSize="11"/>
                        </StackPanel>

                        <StackPanel Grid.Column="4" HorizontalAlignment="Center">
                            <TextBlock Classes="label" Text="RC" HorizontalAlignment="Center" FontSize="8"/>
                            <TextBlock Classes="value" Name="ValRC" Text="--" HorizontalAlignment="Center" FontSize="11"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>

            <!-- Compact Control Buttons -->
            <Border Grid.Row="2" Background="#00000040" CornerRadius="6" Padding="6,4" Margin="3,3,3,3">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="2">
                    <Button Name="BtnStandby" Classes="controlBtn standby" Content="STANDBY" Click="OnStandbyClick"/>
                    <Button Name="BtnTune" Classes="controlBtn tune" Content="TUNE" Click="OnTuneClick"/>
                    <Button Name="BtnBypass" Classes="controlBtn bypass" Content="BYPASS" Click="OnBypassClick"/>
                    <Button Name="BtnPowerOff" Classes="controlBtn power" Content="POWER" Click="OnPowerOffClick"/>
                </StackPanel>
            </Border>
        </Grid>
    </Panel>
</Window>
